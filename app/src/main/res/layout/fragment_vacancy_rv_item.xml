<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_aston_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_aston"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_vacancy_header"
                style="@style/AstonVacancyPrimaryTextStile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backend_developer"
                android:layout_toEndOf="@+id/iv_aston_icon"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_vacancy_content"
                style="@style/AstonVacancySecondaryTextStile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backend_developer_description"
                android:layout_below="@+id/tv_vacancy_header"
                android:layout_toEndOf="@+id/iv_aston_icon"/>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />

</androidx.cardview.widget.CardView>