<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- General styles -->
    <style name="PrimaryTextStile" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTextStile" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_black</item>
    </style>
    <!-- _________________________________________________________________ -->


    <!-- Стили основного фрагмента -->
    <style name="AstonCardPrimaryTextStile" parent="PrimaryTextStile">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AstonCardSecondaryTextStile" parent="SecondaryTextStile">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AstonAboutPrimaryTextStile" parent="PrimaryTextStile">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AstonAboutSecondaryTextStile" parent="SecondaryTextStile">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Стиль для чипов основного фрагмента. -->
    <style name="MenuChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- _________________________________________________________________ -->


    <!-- Стили Splash Activity -->
    <style name="SplashTextStile">
        <item name="android:textColor">@color/text_invisible</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Стили Login Fragment -->
    <!-- Стили Splash Activity -->
    <style name="LoginFragmentEnterButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
    </style>

</resources>