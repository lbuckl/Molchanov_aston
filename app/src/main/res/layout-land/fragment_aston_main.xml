<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_aston_welcome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/iv_welcome"
        android:scaleType="fitXY"
        app:layout_constraintHeight_percent="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.43"
        app:srcCompat="@drawable/pic_aston_welcome" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/iv_aston_welcome_bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_aston_welcome"
        tools:layout_editor_absoluteY="123dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/iv_aston_welcome_right_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="right"
        app:constraint_referenced_ids="iv_aston_welcome"
        tools:layout_editor_absoluteX="227dp" />

    <ImageView
        android:id="@+id/iv_aston_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/aston_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_aston_welcome"
        app:layout_constraintStart_toEndOf="@+id/iv_aston_welcome_right_barrier"
        app:layout_constraintTop_toBottomOf="@+id/group_bottom_info"
        app:srcCompat="@drawable/ic_aston" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_aston_card_primary"
        style="@style/AstonCardPrimaryTextStile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_aston_card_start_margin"
        android:layout_toEndOf="@id/iv_aston_icon"
        android:text="@string/tv_aston_card_primary"
        app:layout_constraintEnd_toEndOf="@+id/gl_margin_right_barrier"
        app:layout_constraintStart_toEndOf="@+id/iv_aston_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_aston_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_aston_cv_secondary"
        style="@style/AstonCardSecondaryTextStile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_aston_card_start_margin"
        android:text="@string/tv_aston_card_secondary"
        app:layout_constraintBottom_toBottomOf="@+id/iv_aston_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_aston_icon"
        app:layout_constraintEnd_toStartOf="@+id/gl_margin_right_barrier"
        app:layout_constraintTop_toBottomOf="@+id/tv_aston_card_primary" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_aston_about_primary"
        style="@style/AstonAboutPrimaryTextStile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_aston_icon"
        android:text="@string/about_us"
        app:layout_constraintLeft_toRightOf="@+id/gl_margin_left_barrier"
        app:layout_constraintTop_toTopOf="@+id/iv_aston_welcome_bottom_barrier" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_aston_about_secondary"
        style="@style/AstonAboutSecondaryTextStile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/about_us_description"
        app:layout_constraintEnd_toStartOf="@+id/gl_margin_right"
        app:layout_constraintStart_toStartOf="@+id/gl_margin_left_barrier"
        app:layout_constraintTop_toBottomOf="@+id/tv_aston_about_primary" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_bottom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gl_margin_right_barrier"
        app:layout_constraintStart_toEndOf="@+id/iv_aston_welcome_right_barrier"
        app:layout_constraintTop_toBottomOf="@+id/iv_aston_welcome_bottom_barrier" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/gl_margin_left_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="gl_margin_left"
        tools:layout_editor_absoluteX="7dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_margin_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/gl_margin_right_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="gl_margin_right"
        tools:layout_editor_absoluteX="724dp" />

</androidx.constraintlayout.widget.ConstraintLayout>